{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Next.js: debug server-side (pg-prisma-redis)",
            "type": "node-terminal",
            "request": "launch",
            "command": "nvm use 18 && npm run dev",
            "cwd": "${workspaceFolder}/pg-prisma-redis/next-app"
        },
        {
            "name": "Next.js: debug client-side (pg-prisma-redis)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "cwd": "${workspaceFolder}/pg-prisma-redis/next-app"
        },
        {
            "name": "Next.js: debug full stack (pg-prisma-redis)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/next",
            "runtimeArgs": [
                "--inspect"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "serverReadyAction": {
                "action": "debugWithEdge",
                "killOnServerStop": true,
                "pattern": "- Local:.+(https?://.+)",
                "uriFormat": "%s",
                "webRoot": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}/pg-prisma-redis/next-app"
        }
    ]
}